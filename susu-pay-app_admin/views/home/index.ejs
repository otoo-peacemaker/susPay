<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>


<div class="Loader" data-text="Loading">
    <span class="Loader__Circle"></span>
    <span class="Loader__Circle"></span>
    <span class="Loader__Circle"></span>
    <span class="Loader__Circle"></span>
  </div>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.imageUrl %>"
                                alt="<%= product.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= product.price %></h2>
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/products/<%= product._id %>" class="btn">Details</a>
                            <% if (isAuthenticated) { %>
                                <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                            <% } %>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <div style="display: flex; align-items: center; justify-content: center; flex-direction: column;">
                <h1 style="text-align: center;"> Susu Pay Service </h1> 
                <a style="width: 11rem ; background-color: teal; color: rgb(243, 243, 243); padding: .6rem 1.3rem; text-decoration: none; text-align: center; border: 1px solid black; display: block;" href="/login"> Account Login </a> <br>
                <a style="width: 11rem ; background-color: teal; color: rgb(243, 243, 243); padding: .6rem 1.3rem; text-decoration: none; text-align: center; border: 1px solid black; display: block;" href="/signup"> Account Signup </a>          
            </div> 
            <% } %>
    </main>
<%- include('../includes/end.ejs') %>